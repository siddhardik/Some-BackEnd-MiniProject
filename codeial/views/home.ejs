<h1>
    Codeial / <%= title %>
</h1>
 
<section id="feed-posts">
    <h4>Posts</h4>

    <% if(locals.user){%>
    <form action="/posts/create" id="new-post-form" method="post" required>
        <textarea name="content" cols="30" row="3"></textarea>
        <input type="submit" value="Post">
    </form>
    <%}%>

    <div id="posts-list-container">
        <ul>
            <%for(post of posts) {%>
                
               <li>
                    <p>
                        <%= post.content %>
                        <br>
                       <small>
                       <%= post.user.name %>
                      </small>
                    </p>
                    <div class="post-comments">
                     <% if(locals.user) {%>
                        <form action="/comments/create" method="post" required>
                            <input type="text" name="content" placeholder="Comment here">
                            <input type="hidden" name="post_id" value="<%= post._id %>">
                            <input type="submit" value="Add comment">
                        </form>
                          
                    <%}%>
                    <div class="post-comment-list">
                        <ul id="post-comments-<%=post._id%>">
                            <%for (comment of post.comments) {%>
                                <p>
                                    <%=comment.content%>
                                    <br>
                                    <small>
                                        <%=comment.user.name%>
                                    </small>
                                </p>
                            <%}%>
                        </ul>

                    </div>
                    </div>
                    

                    
                </li>
                
              
            <%}%>
        </ul>
    </div>

</section>
